<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.AnalyzeActivity">

    <ImageView
        android:id="@+id/img_result"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/title_analyze"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ai_analysis_result"
        app:layout_constraintTop_toBottomOf="@id/img_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black_color"/>

    <TextView
        android:id="@+id/tv_diagnosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diagnosis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_analyze"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black_color"/>

    <TextView
        android:id="@+id/tv_diagnosis_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tooth_discoloration"
        app:layout_constraintStart_toEndOf="@id/tv_diagnosis"
        app:layout_constraintTop_toTopOf="@id/tv_diagnosis"
        app:layout_constraintBottom_toBottomOf="@id/tv_diagnosis"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/black_color"/>

    <TextView
        android:id="@+id/tv_analyze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acuracy_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_diagnosis"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black_color"/>

    <TextView
        android:id="@+id/tv_analyze_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_acuracy"
        app:layout_constraintStart_toEndOf="@id/tv_analyze"
        app:layout_constraintTop_toTopOf="@id/tv_analyze"
        app:layout_constraintBottom_toBottomOf="@id/tv_analyze"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/black_color"/>

    <TextView
        android:id="@+id/tv_add_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_your_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_analyze"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black_color"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cityEditTextLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_information">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cityEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/city_name"
            android:inputType="textPersonName"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/provinceEditTextLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityEditTextLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/provinceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/province_name"
            android:inputType="textPersonName"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/informationEditTextLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/provinceEditTextLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/informationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/additional_information"
            android:inputType="textPersonName"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/dentifycare_main_color"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white_color"
        android:layout_marginStart="22dp"
        android:textSize="20sp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>