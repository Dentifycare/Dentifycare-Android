<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="4dp"
    android:layout_marginBottom="15dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_name_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_name"
            card_view:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            card_view:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black_color"/>

        <TextView
            android:id="@+id/tv_phone_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_phone"
            android:layout_marginTop="4dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/tv_name_patient"
            android:textColor="@color/black_color"/>

        <ImageView
            android:id="@+id/img_status_number"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/dentifycare_main_color"
            card_view:layout_constraintBottom_toBottomOf="@id/tv_phone_patient"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@id/tv_name_patient" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_number"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white_color"
            card_view:layout_constraintBottom_toBottomOf="@+id/img_status_number"
            card_view:layout_constraintEnd_toEndOf="@+id/img_status_number"
            card_view:layout_constraintStart_toStartOf="@+id/img_status_number"
            card_view:layout_constraintTop_toTopOf="@+id/img_status_number" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>