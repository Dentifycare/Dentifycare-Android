<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ChangeInformationActivity">

  <TextView
      android:id="@+id/tv_change_information"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:text="@string/change_information"
      android:textColor="@color/black_color"
      android:textSize="30sp"
      android:textAlignment="center"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/img_profile"
      android:layout_width="245dp"
      android:layout_height="245dp"
      android:layout_marginTop="24dp"
      android:src="@drawable/profile_default"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_change_information" />

  <TextView
      android:id="@+id/tv_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/black_color"
      android:layout_marginTop="32dp"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/img_profile"
      app:layout_constraintStart_toStartOf="@+id/img_profile"
      app:layout_constraintTop_toBottomOf="@+id/img_profile"
      android:text="@string/example_name" />

  <TextView
      android:id="@+id/tv_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/patient"
      android:textColor="@color/black_color"
      android:layout_marginTop="12dp"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/tv_name"
      app:layout_constraintStart_toStartOf="@+id/tv_name"
      app:layout_constraintTop_toBottomOf="@+id/tv_name" />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/nameEditTextLayout"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      app:boxCornerRadiusBottomStart="10dp"
      app:boxCornerRadiusBottomEnd="10dp"
      app:boxCornerRadiusTopEnd="10dp"
      app:boxCornerRadiusTopStart="10dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="24dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_status">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/new_your_name"
        android:inputType="textPersonName"
        tools:ignore="SpeakableTextPresentCheck" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/phoneEditTextLayout"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      app:boxCornerRadiusBottomStart="10dp"
      app:boxCornerRadiusBottomEnd="10dp"
      app:boxCornerRadiusTopEnd="10dp"
      app:boxCornerRadiusTopStart="10dp"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="24dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/nameEditTextLayout">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/new_whatsapp_number"
        android:inputType="numberDecimal"
        tools:ignore="SpeakableTextPresentCheck" />
  </com.google.android.material.textfield.TextInputLayout>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_logout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/button_shape"
      android:backgroundTint="@color/dentifycare_main_color"
      android:text="@string/update"
      android:textAllCaps="false"
      android:textColor="@color/white_color"
      android:layout_marginStart="22dp"
      android:textSize="20sp"
      android:layout_marginEnd="22dp"
      android:layout_marginBottom="75dp"
      app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>